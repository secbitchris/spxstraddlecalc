# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Discord Configuration (Optional)
# Get webhook URL from Discord: Server Settings > Integrations > Webhooks > Create Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1234567890123456789/abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ
DISCORD_ENABLED=true

# GitHub Gist Configuration (Optional)
# Create token at: GitHub > Settings > Developer settings > Personal access tokens > Tokens (classic)
# Required scope: 'gist' (allows creating and updating Gists)
# Token format: ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/spx_calculator.log

# Loki Integration (Optional)
LOKI_ENABLED=false
LOKI_URL=http://your-loki-server:3100
ENVIRONMENT=production

# Prometheus Metrics (Optional)
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PORT=9090

# Scheduler Configuration
ENABLE_SCHEDULER=true
CALCULATION_TIME=09:47:20  # Time in ET to run daily calculation (accounts for 15min Polygon delay)
CLEANUP_DAY=sunday         # Day of week for cleanup
CLEANUP_TIME=02:00         # Time for cleanup

# Data Retention
KEEP_DAYS=90              # Days of data to retain

# Market Configuration
MARKET_TIMEZONE=US/Eastern
SPX_TICKER=I:SPX 