# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Discord Configuration (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_ENABLED=false

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/spx_calculator.log

# Loki Integration (Optional)
LOKI_ENABLED=false
LOKI_URL=http://your-loki-server:3100
ENVIRONMENT=production

# Prometheus Metrics (Optional)
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PORT=9090

# Scheduler Configuration
ENABLE_SCHEDULER=true
CALCULATION_TIME=09:32  # Time in ET to run daily calculation
CLEANUP_DAY=sunday      # Day of week for cleanup
CLEANUP_TIME=02:00      # Time for cleanup

# Data Retention
KEEP_DAYS=90           # Number of days to keep historical data

# Market Configuration
MARKET_TIMEZONE=US/Eastern
SPX_TICKER=I:SPX 